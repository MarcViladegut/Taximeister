<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/languages_list"
        android:entryValues="@array/languages_values"
        android:key="language"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/Language_text" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/currency_list"
        android:entryValues="@array/currency_values"
        android:key="currency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/Currency_text" />

</PreferenceScreen>
